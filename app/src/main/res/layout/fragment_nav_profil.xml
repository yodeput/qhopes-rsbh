<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfilNavFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:text="Usup Supriadi"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/tv_useremail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tv_username"
                    android:text="usupsupriadi01@gmail.com"/>

                <TextView
                    android:id="@+id/tv_userphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tv_useremail"
                    android:text="+82278911288"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/btn_ubah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubah"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- TODO: Update blank fragment layout -->
        <androidx.cardview.widget.CardView
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_bantuan"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bantuan"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:textColor="@color/grey_700"
                    app:icon="@drawable/ic_keyboard_arrow_right" />

                <Button
                    android:id="@+id/btn_terms"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ketentuan Layanan"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:textColor="@color/grey_700"
                    app:icon="@drawable/ic_keyboard_arrow_right"

                    />

                <Button
                    android:id="@+id/btn_saran"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layoutDirection="rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saran"
                    android:textAllCaps="false"
                    android:textAlignment="textStart"
                    android:textColor="@color/grey_700"
                    app:icon="@drawable/ic_keyboard_arrow_right" />

                <Button
                    android:id="@+id/btn_keluar"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keluar"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:background="@android:color/transparent"
                    android:textColor="@color/grey_700" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</FrameLayout>