<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.LandingActivity">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/tv_nip_dokter_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="Login Dokter"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputTextWrap"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="NIP">
            <com.google.android.material.textfield.TextInputEditText
                style="@style/InputText"
                android:drawableLeft="@drawable/ic_user"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:id="@+id/input_nip_dokter_form"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/InputTextWrap"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="Kata Sandi"
            >
            <com.google.android.material.textfield.TextInputEditText
                style="@style/InputText"
                android:drawableLeft="@drawable/ic_password"
                android:focusedByDefault="false"
                android:inputType="textPassword"
                android:id="@+id/input_sandi_dokter_form"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_register_dokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="end"
            android:text="Buat Akun Baru"
            android:textColor="@color/blue_900"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_dokter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/but_primary"
            android:text="L O G I N"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>